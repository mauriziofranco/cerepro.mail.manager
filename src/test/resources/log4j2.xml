<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <File name="LogFile" fileName="/logs/cerepro/mail.manager.log" immediateFlush="true" append="true">
<!--         <File name="LogFile" filename="C:\\logs\\cerepro\\mail.log" immediateFlush="true" > -->
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
<!--         <Root level="INFO"> -->
<!--             <AppenderRef ref="Console" /> -->
<!--             <AppenderRef ref="LogFile"/> -->
<!--         </Root> -->
        <Root level="INFO" additivity="false">
	        <AppenderRef level="INFO" ref="Console" />
	     </Root>
	    <Logger name="org.proxima.common.mail" level="INFO"
	        additivity="false">
	        <Appender-ref ref="LogFile" level="INFO" />
	    </Logger>
    </Loggers>
</Configuration>
